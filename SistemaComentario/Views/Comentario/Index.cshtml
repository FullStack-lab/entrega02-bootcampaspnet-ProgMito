@model List<SistemaComentario.Models.Comentario>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" name="viewport" content="width-device-width">
    <title>Lista de Comentários</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Comentários</h2>
        <a href="@Url.Action("Criar")" class="btn btn-primary mb-4">
            <i class="fas fa-plus"></i> Faça um comentário
        </a>

        <div class="list-group">
            @foreach (var comentario in Model)
            {
                <div class="list-group-item mb-3">
                    <h5>@comentario.Autor</h5>
                    <p><small>@comentario.DataPost.ToString("dd/MM/yyyy HH:mm")</small></p>
                    <p style="word-wrap: break-word;">@(comentario.Texto.Length > 200 ? comentario.Texto.Substring(0, 200) + "..." : comentario.Texto)</p>

                    <span class="badge badge-info">
                        <i class="fas fa-comment"></i> @comentario.Respostas.Count Respostas
                    </span>

                    <div class="mt-2">
                        <a href="@Url.Action("Detalhes", "Comentario", new { id = comentario.Id })" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Detalhes
                        </a>

                        <a href="@Url.Action("Editar", new { id = comentario.Id })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>

                        <a href="@Url.Action("Excluir", new { id = comentario.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este comentário?');">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
