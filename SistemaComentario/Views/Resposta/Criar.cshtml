@model SistemaComentario.Models.Resposta

<!DOCTYPE html>
<html lang="pt-br">
<header>
    <meta charset="utf-8" name="viewport" content="width-device-width">
    <title>Criar Resposta</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</header>
<body>
    <h2>Adicionar Resposta</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.ComentarioId)

        <div>
            <div class="form-group">
                @Html.LabelFor(m => m.Autor, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Autor, new { @class = "form-control", placeholder = "Seu nome", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Texto, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Texto, new { @class = "form-control", placeholder = "Digite sua resposta...", rows = 5, maxlength = "500", required = "required" })
            </div>

            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Adicionar
                </button>
                <a href="@Url.Action("Detalhes", new { id = Model.ComentarioId })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
</body>
</html>
